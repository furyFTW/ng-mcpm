{
    "compilerOptions": {
        "target": "ES5",
        "lib": [
            "es2015",
            "dom"
        ],
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noEmitOnError": true,
        "outDir": "temp",
        "sourceMap": true,
        "baseUrl": "./node_modules",
        "paths": {
            "@ng-mcpm/ng-mcpm": [
                "../src/index"
            ]
            
        },
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts",
        "demo/**/*.ts"
    ],
    "compileOnSave": false
}